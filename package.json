{
  "name": "assignment-nz-fullstack-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev --ui=tui",
    "dev:concurrent": "concurrently \"pnpm --filter @assignment/api dev\" \"pnpm --filter @repo/frontend dev\" --names \"API,FRONTEND\" --prefix-colors \"blue,green\"",
    "api": "turbo run api",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:seed": "cd apps/api && pnpm db:seed",
    "db:reset": "cd apps/api && pnpm db:reset"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@8.0.0"
}