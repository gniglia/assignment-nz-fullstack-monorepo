// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metric {
  id         String   @id @default(cuid())
  title      String
  value      Float
  change     Float
  changeType ChangeType
  icon       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("metrics")
}

model Analytics {
  id        String   @id @default(cuid())
  label     String
  value     Float
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("analytics")
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  role      UserRole
  status    UserStatus
  avatar    String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  lastLogin DateTime?

  @@map("users")
}

enum ChangeType {
  increase
  decrease
}

enum UserRole {
  admin
  user
  moderator
}

enum UserStatus {
  active
  inactive
  pending
}
